name: Convert CSV to YAML

on:
  push:
    paths:
      - 'data/events/upcoming.csv'
      - 'data/board/members.csv'
      - 'data/news/posts.csv'
  workflow_dispatch:

jobs:
  convert:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'
      
      - name: Install dependencies
        run: |
          pip install pyyaml
      
      - name: Convert CSV to YAML
        run: |
          python scripts/csv_to_yaml.py
      
      - name: Commit YAML files
        run: |
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git config --local user.name "github-actions[bot]"
          git add data/**/*.yaml
          git diff --quiet && git diff --staged --quiet || (git commit -m "Auto-convert CSV to YAML [skip ci]" && git push)
